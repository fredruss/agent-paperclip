{
  "name": "claude-code-companion",
  "version": "1.0.0",
  "description": "Desktop pet that shows Claude Code's real-time status",
  "bin": {
    "claude-companion": "./bin/claude-companion.js"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "preuninstall": "node scripts/preuninstall.js",
    "build:scripts": "tsc -p tsconfig.scripts.json",
    "build": "npm run build:scripts && cd app && npm run build && rm -rf ../out && cp -r out ..",
    "test": "cd app && npm test",
    "test:run": "cd app && npm run test:run"
  },
  "files": [
    "bin/",
    "scripts/",
    "hooks/",
    "out/"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "desktop-pet",
    "electron",
    "companion"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fredsourcing/claude-companion"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "electron": "^33.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2"
  }
}
