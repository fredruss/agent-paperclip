{
  "name": "agent-paperclip",
  "version": "1.0.0",
  "description": "Desktop pet that shows your AI coding agent's real-time status",
  "bin": {
    "agent-paperclip": "./bin/agent-paperclip.js"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "preuninstall": "node scripts/preuninstall.js",
    "prepublishOnly": "npm run build && cd app && npm run lint && cd .. && npm run test:run",
    "dev": "cd app && npm run dev",
    "dev:debug": "cd app && npm run dev:debug",
    "build:scripts": "tsc -p tsconfig.scripts.json",
    "build": "npm run build:scripts && cd app && npm run build && rm -rf ../out && cp -r out .. && cp resources/icon.png ../out/",
    "test": "npm run test:scripts && cd app && npm test",
    "test:run": "npm run test:scripts:run && cd app && npm run test:run",
    "test:scripts": "vitest --config vitest.config.ts",
    "test:scripts:run": "vitest run --config vitest.config.ts"
  },
  "files": [
    "README.md",
    "bin/",
    "scripts/",
    "hooks/",
    "lib/",
    "codex/",
    "out/"
  ],
  "keywords": [
    "agent-paperclip",
    "paperclip",
    "claude-code",
    "desktop-pet",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fredruss/agent-paperclip"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "electron": "^40.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  }
}
